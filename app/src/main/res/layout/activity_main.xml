<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="me.nosaka.kotlin.playground.MainViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99CCCCCC"
                android:orientation="vertical"
                android:padding="8dp"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/channelValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#66FFEB3B"
                    android:gravity="center_vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doTryChannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Channelの値を確認開始"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doCancelChannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Channelのジョブをキャンセル"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#99CCCCCC"
                android:orientation="vertical"
                android:padding="8dp"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/flowValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#66FFEB3B"
                    android:gravity="center_vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doTryFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Flowの値を確認開始"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doCancelFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Flowのジョブをキャンセル"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#99CCCCCC"
                android:orientation="vertical"
                android:padding="8dp"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/flowSharedValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#66FFEB3B"
                    android:gravity="center_vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doSharedFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="SharedFlowの値を確認開始"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doCancelSharedFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="SharedFlowのジョブをキャンセル"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#99CCCCCC"
                android:orientation="vertical"
                android:padding="8dp"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/stateFlowdValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#66FFEB3B"
                    android:gravity="center_vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doStateFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="StateFlowの値を確認開始"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doStateFlow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="StateFlowの値を確認開始2"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doCancelStateFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="StateFlowのジョブをキャンセル"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
